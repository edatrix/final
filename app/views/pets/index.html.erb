
<div class="pet-trio">
<% @pets.each do |pet| %>
  <%= image_tag pet.avatar.url(:medium), {:class => "pet-show-image"} %>
<% end %>
</div>

<div class="buttons">
  <span> 
    <%= link_to "View all lost pets", lost_pets_path, method: :get, id: "lost_pets" %>
    <%= image_tag "paw.jpg" %>
    <%= link_to "View all found pets", found_pets_path, method: :get, id: "found_pets" %>
  </span>
</div>


<div class="form-container">
  <h3 class="form-header"> Enter information about your lost or found pet here </h3>
    <div class="pet-form">
      <%= render partial: 'pet_form' %>
    </div>
</div>


