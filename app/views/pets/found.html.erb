<h2>Does this belong to you?</h2>

<div id="found">
  <ul class="found-pet-list">
    <% @pets.each do |pet| %>
    <li class="found-pet">
      <% if pet.avatar.exists? %>
        <%= image_tag pet.avatar.url(:medium), {:class => "found-pet-show-image"} %>
      <% elsif pet.avatar_file_name %>
        <%= image_tag pet.avatar_file_name, {:class => "found-pet-show-image"} %>
      <% end %>
      <p> <%= pet.name %></p>
      <p> <%= pet.description[0..250] %>...</p><a href="found_pets_path">read more</a>
      <p> <%= pet.shelter_name %></p>
      <p> <%= pet.zip %></p>
    </li>
    <% end %>
  </ul>
</div>

